<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC400"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.axlevisu.vgrdimmercontrol.MainActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android.support.v7.cardview:cardCornerRadius ="5sp"
        android.support.v7.cardview:cardElevation = "4sp"
        >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load 1"
            android:textAllCaps="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/loadText1"
        android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    </RelativeLayout>
    <SeekBar
        android:id="@+id/loadSeekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumbTint="#E65100"
        android:layout_marginTop="10dp"
        android:max="15"
        android:progress="0"
        android:progressTint="#E65100"
        android:padding="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android.support.v7.cardview:cardCornerRadius ="5sp"
        android.support.v7.cardview:cardElevation = "4sp"
        android:layout_marginTop="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load 2"
            android:textAllCaps="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/loadText2"
        android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    </RelativeLayout>
    <SeekBar
        android:id="@+id/loadSeekBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:thumbTint="#E65100"
        android:progressTint="#E65100"
        android:max="15"
        android:progress="0"
        android:padding="10dp"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android.support.v7.cardview:cardCornerRadius ="5sp"
        android.support.v7.cardview:cardElevation = "4sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load 3"
            android:textAllCaps="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/loadText3"
        android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    </RelativeLayout>
    <SeekBar
        android:id="@+id/loadSeekBar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:max="15"
        android:thumbTint="#E65100"
        android:progressTint="#E65100"
        android:progress="0"
        android:padding="10dp"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>